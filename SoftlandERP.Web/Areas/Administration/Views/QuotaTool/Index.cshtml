@model IEnumerable<QuotaToolViewModel>

@{
    int index = 0;
}

<div>
    <table class="table-responsive table-bordered table-striped mb-0" id="view-datatable">
        <thead>
            <tr>
                <th class="center">#</th>
                <th class="center">@Html.DisplayNameFor(model => model.ComputerName)</th>
                <th class="center">@Html.DisplayNameFor(model => model.QuotaVolume)</th>
                <th class="center">@Html.DisplayNameFor(model => model.User)</th>
                <th class="center">@Html.DisplayNameFor(model => model.Limit)</th>
                <th class="center">@Html.DisplayNameFor(model => model.WarningLimit)</th>
                <th class="center">@Html.DisplayNameFor(model => model.DiskSpaceUsed)</th>
                <th class="center">@Html.DisplayNameFor(model => model.StatusString)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="center">@(++index)</td>
                    <td class="center">@Html.DisplayFor(x => item.ComputerName)</td>
                    <td class="center">@Html.DisplayFor(x => item.QuotaVolume)</td>
                    <td class="center">@Html.DisplayFor(x => item.User)</td>
                    <td class="center">@Html.DisplayFor(x => item.Limit)</td>
                    <td class="center">@Html.DisplayFor(x => item.WarningLimit)</td>
                    <td class="center">@Html.DisplayFor(x => item.DiskSpaceUsed)</td>
                    @if (item.StatusString == "OK")
                    {
                        <td class="center">
                            <span class="badge badge-success">@Html.DisplayFor(x => item.StatusString)</span>
                        </td>
                    }
                    else if (item.StatusString == "Ostrzeżenie")
                    {
                        <td class="center">
                            <span class="badge badge-warning">@Html.DisplayFor(x => item.StatusString)</span>
                        </td>
                    }
                    else
                    {
                        <td class="center">
                            <span class="badge badge-danger">@Html.DisplayFor(x => item.StatusString)</span>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/Administration/Views/index.js"></script>
}