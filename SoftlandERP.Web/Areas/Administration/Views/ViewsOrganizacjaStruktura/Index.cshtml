@model StructuraViewModel

@{
    int index = 0;
}

<div>
    <table class="table-responsive table-bordered table-striped mb-0" id="view-datatable">
        <thead>
            <tr>
                <th class="center">#</th>
                <th class="center"></th>
                <th class="center">Departament</th>
                <th class="center">Dział</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var place in Model.StructuraList)
            {
                <tr>
                    <td class="center">@(++index)</td>
                    <td class="center">@place.First</td>
                    <td class="center">@place.Second</td>
                    <td class="center">@place.Third</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/Administration/Views/index.js"></script>
}